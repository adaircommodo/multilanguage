{% extends 'base.html.twig' %}

{% block title %}{% trans %}Hello{% endtrans %} DefaultController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>{% trans %}Hello{% endtrans %} {{ controller_name }}! ✅</h1>
    
    <h2>{{ app.request.locale|locale_name(app.request.locale)|u.title }}</h2>
    
    <br>

    <ul>
        <li><h1><small>Locale que vai para a API:</small> {{ app.request.locale }}</h1></li>    
        <li>
            <a class="dropdown-item" href="{{ path('site_index_nolocale') }}">English</a>
        </li>
        <li>
            <a class="dropdown-item" href="{{ path('site_index', {_locale: 'fr'}) }}">Français</a>
        </li>
        <li>
            <a class="dropdown-item" href="{{ path('site_index', {_locale: 'pt'}) }}">Portugues (PT)</a>
        </li>
        <li>
            <a class="dropdown-item" href="{{ path('site_index', {_locale: 'pt_BR'}) }}">Português (BR)</a>
        </li>
        <li>
            <a class="dropdown-item" href="{{ path('site_index', {_locale: 'es'}) }}">Español</a>
        </li>
    </ul>
</div>


{% endblock %}
